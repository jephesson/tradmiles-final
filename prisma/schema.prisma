/**
 * =========================
 * ✅ AGENDA (SHIFT / ABSENCE) + AUDIT + CORES
 * =========================
 */
enum AgendaEventType {
  SHIFT
  ABSENCE
}

enum AgendaEventStatus {
  ACTIVE
  CANCELED
}

enum AgendaAuditAction {
  CREATE
  UPDATE
  DELETE
  SWAP
}

model AgendaEvent {
  id     String            @id @default(cuid())
  team   String
  type   AgendaEventType
  status AgendaEventStatus @default(ACTIVE)

  // "YYYY-MM-DD" (interno) — exibição DD/MM/AAAA fica no frontend
  dateISO  String
  startMin Int
  endMin   Int

  note String?

  userId String
  user   User @relation("AgendaEventUser", fields: [userId], references: [id], onDelete: Cascade)

  createdById String
  createdBy   User @relation("AgendaEventCreatedBy", fields: [createdById], references: [id], onDelete: Restrict)

  canceledAt   DateTime?
  canceledById String?
  canceledBy   User? @relation("AgendaEventCanceledBy", fields: [canceledById], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  audits AgendaAudit[]

  @@index([team, dateISO])
  @@index([team, userId, dateISO])
  @@index([team, status])
  @@map("agenda_events")
}

model AgendaAudit {
  id      String           @id @default(cuid())
  team    String
  eventId String
  event   AgendaEvent      @relation(fields: [eventId], references: [id], onDelete: Cascade)

  action AgendaAuditAction

  actorId String
  actor   User @relation("AgendaAuditActor", fields: [actorId], references: [id], onDelete: Restrict)

  fromUserId   String?
  toUserId     String?
  fromStartMin Int?
  fromEndMin   Int?
  toStartMin   Int?
  toEndMin     Int?

  note      String?
  createdAt DateTime @default(now())

  @@index([team, createdAt])
  @@index([team, eventId])
  @@index([actorId])
  @@map("agenda_audits")
}

