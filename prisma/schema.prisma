// prisma/schema.prisma
// https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/*
  MODELOS
  Ajuste conforme seu banco real.
  Abaixo está um modelo mínimo compatível com o auth que você já usa.
*/

model User {
  id           String   @id @default(uuid())
  login        String   @unique
  name         String
  email        String?  @unique
  team         String
  role         String
  passwordHash String

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
