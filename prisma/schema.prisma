// prisma/schema.prisma
// https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

/*
  MODELOS
  Modelo mínimo compatível com seu /api/auth
*/
model User {
  id           String   @id @default(uuid())
  login        String   @unique
  name         String
  email        String?  @unique
  team         String
  role         String
  passwordHash String

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
